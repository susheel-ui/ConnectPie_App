<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="15dp"
        app:cardCornerRadius="45dp"
        app:cardElevation="10dp"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageDp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintVertical_weight="2"
                android:src="@drawable/person"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/status_indigator"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:cardCornerRadius="5dp"
        android:backgroundTint="@color/green"
        android:layout_alignBottom="@id/cardView1"
        android:layout_alignEnd="@id/cardView1"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        />
   <TextView
       android:id="@+id/PSLUsersname"
       android:layout_width="80dp"
       android:layout_height="wrap_content"
       android:text="xxxx xxxx"
       android:textSize="15dp"
       android:layout_alignTop="@id/cardView1"
       android:layout_marginTop="75dp"
       android:layout_marginStart="10dp"
       android:textColor="@color/black"
       android:gravity="center"
       />


</RelativeLayout>